<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginCheck</servlet-name>
        <servlet-class>servlets.LoginCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoggedOut</servlet-name>
        <servlet-class>servlets.LoggedOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationConfirmination</servlet-name>
        <servlet-class>servlets.RegistrationConfirmination</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginCheck</servlet-name>
        <url-pattern>/LoginCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoggedOut</servlet-name>
        <url-pattern>/LoggedOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationConfirmination</servlet-name>
        <url-pattern>/RegistrationConfirmination</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
